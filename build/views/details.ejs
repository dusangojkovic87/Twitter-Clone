<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/profile.css" />
    <link rel="stylesheet" href="/css/post.css" />
    <link rel="stylesheet" href="/css/tweetModal.css" />
    <title>Twitter Clone</title>
  </head>
  <body>
    <!--reply modal-->
    <div class="reply-modal-container"></div>
    <!--reply modal end-->
    <%- include('partials/navigation') %>
    <main>
      <!-- username heading and back btn -->
      <div class="user-name-container">
        <span class="back__icon"></span>
        <div class="user-name-wrrapper">
          <p class="user__name"><%= user.name %> <%= user.surname %></p>
          <p class="tweet__number"><%= tweetCount %> tweets</p>
        </div>
      </div>
       <!-- end username heading -->
        <!--profile images -->
      <div class="profile-img-container">
        <img class="bg__img" src=<%= user.bgImage %> alt=<%= user.bgImage %> />
        <div class="profile-main">
            <img src=<%= user.profilePic %> alt=<%= user.profilePic %> />
        </div>
      </div>
      <div class="following-wrrapper">
         
       
    <%if(typeof user != 'null'){ %>
            <%if(user.followers.includes(locals.loggedUserId)){ %>
              <div class="follow-btn-wrrapper bg--grey">
                  <button class="follow__btn color--black "> Following </button>
              </div>
               <% }else{ %>
                <div class="follow-btn-wrrapper bg--black">
                     <button class="follow__btn color--white"> Follow </button>
                </div>
                <% }%> 
     <% } %>
              </button>
         
      </div>
    <!-- end profile images-->
    <div class="profile-followers-container">
          <h6><%= user.name %> <%= user.surname%></h6>
          <div class="date-wrrapper">
                <span class="date__icon"></span>
                <p class="profile__joined__date"> Joined: <%= moment(user.createdAt).format("LL") %></p>
          </div>
          <div class="followers-wrrapper">
                <p> <%= user.followers.length == 0 ? 0 : user.followers.length %> Followers</p>
                <p> <%= user.following.length == 0 ? 0 : user.following.length %> Following</p>
          </div>
    </div>
    <div class="profile-tweet-menu-container">
      <ul class="profile-tweet-menu">
           <li><a class="tweet__menu__nav" href="#tweets">Tweets</a></li>
           <li><a class="tweet__menu__nav" href="#replies">Tweets & replies</a></li>
           <li><a class="tweet__menu__nav" href="#media">Media</a></li>
           <li><a class="tweet__menu__nav" href="#likes">likes</a></li>
      </ul>
      <div class="profile-tweet-content">
          <div class="myTweet-wrrapper"></div>
      </div>
  </div>
</main>
<aside>
  <%- include('partials/searchUsers') %>
</aside>
<script>
  var exports = { __esModule: true };
</script>
<script src="/plugins/moment/min/moment.min.js"></script>
<script src="/js/post.js"></script>
<script src="/js/details.js"></script>
<script src="/js/searchUsers.js"></script>
<script src="/js/navigation.js"></script>



</body>
</html>
